{% extends "layout-focusedform" %}

{% block title %}Registration Form{% endblock %}

{% block styles %}{% endblock %}
{% block scripts %}{% endblock %}

{% block content %}
<div class="container" id="registration-form">
	<a href="index.html" class="login-logo"><img src="{{'img/logo-dark.png' | asset_url | img_loc }}"></a>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<div class="panel panel-default alt">
				<div class="panel-heading"><h2>Registration Form</h2></div>
				<div class="panel-body">
					<form action="" class="">
						<div class="form-group">
							<label for="fullname" class="control-label">Full Name</label>
							<input type="text" class="form-control" id="fullname" placeholder="Full Name">
						</div>
						<div class="form-group">
							<label for="username" class="control-label">Username</label>
							<input type="text" class="form-control" id="username" placeholder="Username">
						</div>
						<div class="form-group">
							<label for="email" class="control-label">Email Address</label>
							<input type="text" class="form-control" id="email" placeholder="someone@example.com">
						</div>
						<div class="form-group">
							<label for="password" class="control-label">Password</label>
							<input type="password" class="form-control" id="password" placeholder="******">
						</div>
						<div class="form-group">
							<label for="password2" class="control-label">Confirm Password</label>
							<input type="password" class="form-control" id="password2" placeholder="******">
						</div>
						<div class="form-group mb-n">
							<div class="checkbox block">
								<input type="checkbox" class="tectonic" id="rememberme1" value="1" name="ham">
								<label for="rememberme1" class="pl-n"></label>
								<span>Remember me</span>
							</div>
						</div>
						
					</form>
				</div>
				<div class="panel-footer">
					<div class="clearfix">
						<a href="extras-login.html" class="btn btn-success pull-left m-n">Already Registered? Login</a>
						<a href="extras-registration.html" class="btn btn-primary pull-right">Register</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}